@model M183.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-lg-6 col-lg-offset-0">
        @using (Html.BeginForm("Login", "Lab1", FormMethod.Post, new { @class = "well" }))
        {
            <div>
                @Html.LabelFor(m => m.Username)
            </div>
            <div>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.Username,"", new { @class = "error-message" })
            </div>

            <div>
                @Html.LabelFor(m => m.Password)
            </div>
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
            </div>

            <div>
                @Html.LabelFor(m => m.IsStayLoggedin)
            </div>
            <div>
                @Html.CheckBoxFor(m => m.IsStayLoggedin, new { @class = "form-control" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.IsStayLoggedin, "", new { @class = "error-message" })
            </div>

            <input type="submit" value="Login"  class="btn btn-primary" />
        }

    </div>
</div>
